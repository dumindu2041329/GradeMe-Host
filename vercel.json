{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "vite.config.js",
      "use": "@vercel/vite",
      "config": { "project": "client" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/index.ts"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}